{
    "BlockRoot": {
        "BlockType": "stack",
        "Orientation": "Vertical",
        "Margin": "50",
        "Items": [
            {
                "BlockType": "itemstack",
                "MarginBottom": -120,
                "Orientation": "Vertical",
                "StretchWidth": true,
                "ItemStackOptions": {
                    "ItemSource": "{Standings.Events}",
                    "Limit": 1,
                    "IndexStart": "{Season.SeasonCurrentNumberEventExcludingNonChampionship, Converter=NumberSubtract, Parameter=1}",
                    "ItemTemplate": {
                        "BlockType": "component",
                        "Component": "Header",
                        "ComponentOptions": {
                            "Vars": {
                                "TopLineSource": "[{Item.Track.CircuitName, Converter=StringToUpperString}] [GRAND PRIX]",
                                "BottomLineSource": "[CONSTRUCTORS' STANDINGS]",
                                "FlagPath": "{Item.Track.Nation.LogotypePath}",
                                "CircuitPath": "track maps/{Item.Track.CircuitName}.png",
                                "CircuitColour": "{{Item.Track.Nation.Code}HeaderCircuitColour}"
                            }
                        }
                    }
                }
            },
            {
                "BlockType": "stack",
                "Width": "*",
                "Margin": "0,250,0,-250",
                "Items": [
                    {
                        "BlockType": "component",
                        "Component": "SeasonProgress"
                    }
                ]
            },
            {
                "BlockType": "table",
                "TableOptions": {
                    "ItemsSource": "{Standings.Teams}",
                    "RowSpacing": 25,
                    "RowHeight": 132,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 60,
                        "Style": "CalendarHeader"
                    },
                    "Columns": [
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.left.png"
                            }
                        },
                        {
                            "Header": "",
                            "Template": {
                                "PaddingRight": 40,
                                "BlockType": "component",
                                "Component": "Cell",
                                "ComponentOptions": {
                                    "Vars": {
                                        "source": "{Item.Position}",
                                        "align": "Left",
                                        "font": "{Bold}"
                                    }
                                }
                            }
                        },
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "stack",
                                "Background": "FFFFFF",
                                "PaddingRight": 30,
                                "Items": [
                                    {
                                        "BlockType": "shape",
                                        "Height": 80,
                                        "Width": 18,
                                        "VerticalAlignment": "Center",
                                        "ShapeOptions": {
                                            "Fill": "{Item.Team.Color}"
                                        },
                                        "Triggers": [
                                            {
                                                "Condition": "{Item.{{{Type}}}.Name, Converter=EmptyObjectToTrue}",
                                                "Property": "ShapeOptions.Fill",
                                                "Value": "{ReserveColour}"
                                            }
                                        ]
                                    }
                                ]
                            }
                        },
                        {
                            "Header": "",
                            "Template": {
                                "PaddingRight": 400,
                                "BlockType": "component",
                                "Component": "Cell",
                                "ComponentOptions": {
                                    "Vars": {
                                        "source": "{Item.{{{Type}}}.Name, Converter=StringToUpperString}",
                                        "align": "Left",
                                        "font": "{Regular}"
                                    }
                                }
                            }
                        },
                        {
                            "Header": "",
                            "Template": {
                                "PaddingRight": 40,
                                "BlockType": "component",
                                "Component": "Cell",
                                "ComponentOptions": {
                                    "Vars": {
                                        "source": "{Item.Driver0.Driver.{{NameConvention}}, Converter=StringFormatReverse, Parameter={Item.Driver0.Driver.{{NameConvention}}{{NameUpperString}}}} & {Item.Driver1.Driver.{{NameConvention}}, Converter=StringFormatReverse, Parameter={Item.Driver1.Driver.{{NameConvention}}{{NameUpperString}}}}",
                                        "align": "Center",
                                        "font": "{Bold}"
                                    }
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{NameConvention, Converter=StringEquals, Parameter=Full Name}",
                                        "ComponentVar": "source",
                                        "Value": "{Item.Driver0.Driver.Name, Converter=StringFormatReverse, Parameter={Item.Driver0.Driver.Name{{NameUpperString}}}} {Item.Driver0.Driver.RealName, Converter=StringFormatReverse, Parameter={Item.Driver0.Driver.RealName{{NameUpperString}}}} & {Item.Driver1.Driver.Name, Converter=StringFormatReverse, Parameter={Item.Driver1.Driver.Name{{NameUpperString}}}} {Item.Driver1.Driver.RealName, Converter=StringFormatReverse, Parameter={Item.Driver1.Driver.RealName{{NameUpperString}}}}"
                                    },
                                    {
                                        "Condition": "{NameSwitch}",
                                        "ConditionAnd": "{NameConvention, Converter=StringEquals, Parameter=Full Name}",
                                        "ComponentVar": "source",
                                        "Value": "{Item.Driver0.Driver.RealName, Converter=StringFormatReverse, Parameter={Item.Driver0.Driver.RealName{{NameUpperString}}}} {Item.Driver0.Driver.Name, Converter=StringFormatReverse, Parameter={Item.Driver0.Driver.Name{{NameUpperString}}}} & {Item.Driver1.Driver.RealName, Converter=StringFormatReverse, Parameter={Item.Driver1.Driver.RealName{{NameUpperString}}}} {Item.Driver1.Driver.Name, Converter=StringFormatReverse, Parameter={Item.Driver1.Driver.Name{{NameUpperString}}}}"
                                    }
                                ]
                            }
                        },
                        {
                            "Header": "[PTS]",
                            "Template": {
                                "BlockType": "dock",
                                "Background": "FFFFFF",
                                "Items": [
                                    {
                                        "BlockType": "component",
                                        "Component": "Cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "source": "{Item.Points.StringValue}",
                                                "align": "Center",
                                                "font": "{Bold}"
                                            }
                                        }
                                    }
                                ]
                            }
                        },
                        {
                            "Header": "",
                            "Template": {
                                "PaddingLeft": 40,
                                "Background": "FFFFFF",
                                "BlockType": "itemstack",
                                "ItemStackOptions": {
                                    "ItemSource": "{Item.Events}",
                                    "Limit": 1,
                                    "IndexStart": "{Season.SeasonCurrentNumberEventExcludingNonChampionship, Converter=NumberSubtract, Parameter=1}",
                                    "ItemTemplate": {
                                        "BlockType": "component",
                                        "Component": "Cell",
                                        "ComponentOptions": {
                                            "Vars": {
                                                "source": "+{Item.Points.StringValue}",
                                                "align": "Center",
                                                "font": "{Bold}"
                                            }
                                        },
                                        "Triggers": [
                                            {
                                                "Condition": "{Item.Points.IntValue, Converter=NumberGreater, Parameter=0}",
                                                "Setters": [
                                                    {
                                                        "Property": "FontSize",
                                                        "Value": 50
                                                    },
                                                    {
                                                        "Property": "Foreground",
                                                        "Value": "007E8F"
                                                    }
                                                ]
                                            },
                                            {
                                                "Condition": "{Item.Points.IntValue, Converter=NumberEquals, Parameter=0}",
                                                "Property": "Opacity",
                                                "Value": 0
                                            }
                                        ]
                                    }
                                }
                            }
                        },
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.Right.png"
                            }
                        },
                        {
                            "Header": "[GAP]",
                            "Template": {
                                "MarginLeft": 25,
                                "BlockType": "component",
                                "Component": "SingleCell",
                                "ComponentOptions": {
                                    "Vars": {
                                        "source": "+{Item.{Gap}}",
                                        "font": "{FontNameDefault}",
                                        "FG": "{BlackFontColour}"
                                    }
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{Item.Position, Converter=NumberEquals, Parameter=1}",
                                        "ComponentVar": "opacity",
                                        "Value": "0"
                                    },
                                    {
                                        "Condition": "{Item.PointsToAboveDiff.IntValue, Converter=NumberEquals, Parameter=0}",
                                        "ConditionAnd": "{Gap, Converter=StringEquals, Parameter=PointsToAboveDiff}",
                                        "ComponentVar": "opacity",
                                        "Value": "0"
                                    }
                                ]
                            }
                        },
                        {
                            "Header": "",
                            "Template": {
                                "MarginLeft": 25,
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.Left.png"
                            }
                        },
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "component",
                                "Component": "Cell",
                                "ComponentOptions": {
                                    "Vars": {
                                        "source": "{Item.PositionJump}",
                                        "align": "Center",
                                        "font": "{Bold}"
                                    }
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{Item.PositionJump, Converter=NumberGreater, Parameter=0}",
                                        "Setters": [
                                            {
                                                "Property": "Foreground",
                                                "Value": "008000"
                                            },
                                            {
                                                "ComponentVar": "source",
                                                "Value": "+{Item.PositionJump}"
                                            }
                                        ]
                                    },
                                    {
                                        "Condition": "{Item.PositionJump, Converter=NumberLess, Parameter=0}",
                                        "Property": "Foreground",
                                        "Value": "FF0000"
                                    },
                                    {
                                        "Condition": "{Item.PositionJump, Converter=NumberEquals, Parameter=0}",
                                        "ComponentVar": "source",
                                        "Value": "="
                                    }
                                ]
                            }
                        },
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.Right.png"
                            }
                        },
                        {
                            "MultiColumnHeadersSource": "{Standings.Events}",
                            "MultiColumnItemsSource": "{Item.Events}",
                            "HorizontalAlignment": "Center",
                            "MultiColumnHeaderTemplate": {
                                "BlockType": "dock",
                                "Orientation": "Vertical",
                                "HorizontalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "HorizontalAlignment": "Center",
                                        "Source": "R{Item.Position, Converter=NumberSubtract, Parameter={Season.SeasonOverallNumberEvents, Converter=NumberSubtract, Parameter={Season.SeasonOverallNumberEventsExcludingNonChampionship}}}",
                                        "Style": "CalendarHeader"
                                    },
                                    {
                                        "BlockType": "image",
                                        "Source": "{Item.Track.Nation.LogotypePath}",
                                        "HorizontalAlignment": "Center",
                                        "MarginBottom": 40,
                                        "Height": 160,
                                        "Width": 140
                                    }
                                ]
                            },
                            "Template": {
                                "BlockType": "dock",
                                "MarginLeft": 25,
                                "HorizontalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "image",
                                        "Width": 30,
                                        "Height": 132,
                                        "HorizontalAlignment": "Left",
                                        "Colorize": {
                                            "Color": "FFFFFF"
                                        },
                                        "Source": "cell.left.png"
                                    },
                                    {
                                        "BlockType": "dock",
                                        "VerticalAlignment": "Center",
                                        "HorizontalAlignment": "Center",
                                        "Background": "FFFFFF",
                                        "Width": "*",
                                        "Height": 132,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Source": "{Item.Points.StringValue}",
                                                "HorizontalAlignment": "Center",
                                                "VerticalAlignment": "Center",
                                                "TextOptions": {
                                                    "FontSize": 60,
                                                    "HorizontalAlignment": "Center",
                                                    "VerticalAlignment": "Center",
                                                    "Foreground": "000000"
                                                },
                                                "Triggers": [
                                                    {
                                                        "Condition": "{Item.Points.StringValue, Converter=StringEquals, Parameter=0}",
                                                        "ConditionAnd": "{StandingsProgress, Converter=StringEquals, Parameter=Points}",
                                                        "Property": "Opacity",
                                                        "Value": 0
                                                    },
                                                    {
                                                        "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=1}",
                                                        "Property": "Foreground",
                                                        "Value": "{P1FontColour}"
                                                    },
                                                    {
                                                        "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=2}",
                                                        "Property": "Foreground",
                                                        "Value": "{P2FontColour}"
                                                    },
                                                    {
                                                        "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=3}",
                                                        "Property": "Foreground",
                                                        "Value": "{P3FontColour}"
                                                    },
                                                    {
                                                        "Condition": "{StandingsProgress, Converter=StringEquals, Parameter=Position}",
                                                        "Property": "Source",
                                                        "Value": "{Item.RaceMajorPositionString}"
                                                    },
                                                    {
                                                        "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=DNF}",
                                                        "Property": "FontSize",
                                                        "Value": 60
                                                    },
                                                    {
                                                        "Condition": "{Item.RaceMajorPositionString, Converter=StringEquals, Parameter=OK}",
                                                        "Property": "Source",
                                                        "Value": "DSQ"
                                                    },
                                                    {
                                                        "Condition": "{Item.RaceMajorPositionString, Converter=EmptyObjectToTrue}",
                                                        "ConditionAnd": "{StandingsProgress, Converter=StringNotEquals, Parameter=Points}",
                                                        "Setters": [
                                                            {
                                                                "Property": "Source",
                                                                "Value": "DNS"
                                                            },
                                                            {
                                                                "Property": "FontSize",
                                                                "Value": 60
                                                            },
                                                            {
                                                                "Property": "Opacity",
                                                                "Value": 0
                                                            }
                                                        ]
                                                    }
                                                ]
                                            }
                                        ]
                                    },
                                    {
                                        "BlockType": "image",
                                        "Width": 30,
                                        "Height": 132,
                                        "HorizontalAlignment": "Right",
                                        "Colorize": {
                                            "Color": "FFFFFF"
                                        },
                                        "Source": "cell.right.png"
                                    }
                                ],
                                "Triggers": [
                                    {
                                        "Condition": "{StandingsProgressEvents, Converter=BoolReverse}",
                                        "Property": "RenderIf",
                                        "Value": "{Item.Event.WinnerString, Converter=EmptyObjectToFalse}"
                                    }
                                ]
                            }
                        }
                    ]
                }
            },
            {
                "BlockType": "stack",
                "HorizontalAlignment": "Center",
                "Spacing": 40,
                "MarginTop": 40,
                "Width": "*",
                "Items": [
                    {
                        "BlockType": "stack",
                        "Items": [
                            {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "IsEnabled": true,
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.left.png"
                            },
                            {
                                "BlockType": "itemstack",
                                "ItemStackOptions": {
                                    "ItemSource": "{Standings.Drivers}",
                                    "Limit": 1,
                                    "ItemTemplate": {
                                        "BlockType": "dock",
                                        "Width": 800,
                                        "Background": "FFFFFF",
                                        "Height": 132,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Style": "LightText",
                                                "HorizontalAlignment": "Left",
                                                "Source": "[DRIVER LEADER]",
                                                "Foreground": "{LightFontColour}"
                                            },
                                            {
                                                "BlockType": "component",
                                                "Component": "DriverLine",
                                                "ComponentOptions": {
                                                    "Vars": {
                                                        "align": "Right",
                                                        "fontsize": 60
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                }
                            },
                            {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "IsEnabled": true,
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.right.png"
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "WidthPercent": 60,
                        "Items": [
                            {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "IsEnabled": true,
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.left.png"
                            },
                            {
                                "BlockType": "itemstack",
                                "Width": "*",
                                "ItemStackOptions": {
                                    "ItemSource": "{Standings.Teams}",
                                    "OrderByDescending": "PositionJump",
                                    "Limit": 1,
                                    "ItemTemplate": {
                                        "BlockType": "dock",
                                        "Background": "FFFFFF",
                                        "Height": 132,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Style": "LightText",
                                                "HorizontalAlignment": "Left",
                                                "Source": "[BIGGEST GAIN]",
                                                "Foreground": "{LightFontColour}"
                                            },
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Right",
                                                "VerticalAlignment": "Center",
                                                "Source": "{Item.{{{Type}}}.Name}",
                                                "Height": "*",
                                                "Foreground": "{LightFontColour}",
                                                "FontSize": 60
                                            }
                                        ]
                                    }
                                }
                            },
                            {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "IsEnabled": true,
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.right.png"
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "WidthPercent": 60,
                        "Items": [
                            {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "IsEnabled": true,
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.left.png"
                            },
                            {
                                "BlockType": "itemstack",
                                "Width": "*",
                                "ItemStackOptions": {
                                    "ItemSource": "{Standings.Teams}",
                                    "OrderByDescending": "CountP1",
                                    "Limit": 1,
                                    "ItemTemplate": {
                                        "BlockType": "dock",
                                        "Background": "FFFFFF",
                                        "Height": 132,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Style": "LightText",
                                                "HorizontalAlignment": "Left",
                                                "Source": "[MOST WINS]",
                                                "Foreground": "{LightFontColour}"
                                            },
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Right",
                                                "VerticalAlignment": "Center",
                                                "Source": "{Item.{{{Type}}}.Name}",
                                                "Height": "*",
                                                "Foreground": "{LightFontColour}",
                                                "FontSize": 60
                                            }
                                        ]
                                    }
                                }
                            },
                            {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "IsEnabled": true,
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.right.png"
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "WidthPercent": 78,
                        "Items": [
                            {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "IsEnabled": true,
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.left.png"
                            },
                            {
                                "BlockType": "itemstack",
                                "Width": "*",
                                "ItemStackOptions": {
                                    "ItemSource": "{Standings.Teams}",
                                    "OrderByDescending": "CountTop3",
                                    "Limit": 1,
                                    "ItemTemplate": {
                                        "BlockType": "dock",
                                        "Background": "FFFFFF",
                                        "Height": 132,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Style": "LightText",
                                                "HorizontalAlignment": "Left",
                                                "Source": "[MOST PODIUMS]",
                                                "Foreground": "{LightFontColour}"
                                            },
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Right",
                                                "VerticalAlignment": "Center",
                                                "Source": "{Item.{{{Type}}}.Name}",
                                                "Height": "*",
                                                "Foreground": "{LightFontColour}",
                                                "FontSize": 60
                                            }
                                        ]
                                    }
                                }
                            },
                            {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "IsEnabled": true,
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.right.png"
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "WidthPercent": 84,
                        "Items": [
                            {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "IsEnabled": true,
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.left.png"
                            },
                            {
                                "BlockType": "itemstack",
                                "Width": "*",
                                "ItemStackOptions": {
                                    "ItemSource": "{Standings.Teams}",
                                    "OrderByDescending": "CountQualP1",
                                    "Limit": 1,
                                    "ItemTemplate": {
                                        "BlockType": "dock",
                                        "Background": "FFFFFF",
                                        "Height": 132,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Style": "LightText",
                                                "HorizontalAlignment": "Left",
                                                "Source": "[MOST POLES]",
                                                "Foreground": "{LightFontColour}"
                                            },
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Right",
                                                "VerticalAlignment": "Center",
                                                "Source": "{Item.{{{Type}}}.Name}",
                                                "Height": "*",
                                                "Foreground": "{LightFontColour}",
                                                "FontSize": 60
                                            }
                                        ]
                                    }
                                }
                            },
                            {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "IsEnabled": true,
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.right.png"
                            }
                        ]
                    },
                    {
                        "BlockType": "stack",
                        "WidthPercent": 100,
                        "Items": [
                            {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "IsEnabled": true,
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.left.png"
                            },
                            {
                                "BlockType": "itemstack",
                                "Width": "*",
                                "ItemStackOptions": {
                                    "ItemSource": "{Standings.Teams}",
                                    "OrderByDescending": "RaceFastestLapCount",
                                    "Limit": 1,
                                    "ItemTemplate": {
                                        "BlockType": "dock",
                                        "Background": "FFFFFF",
                                        "Height": 132,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Style": "LightText",
                                                "HorizontalAlignment": "Left",
                                                "Source": "[MOST FL]",
                                                "Foreground": "{LightFontColour}"
                                            },
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Right",
                                                "VerticalAlignment": "Center",
                                                "Source": "{Item.{{{Type}}}.Name}",
                                                "Height": "*",
                                                "Foreground": "{LightFontColour}",
                                                "FontSize": 60
                                            }
                                        ]
                                    }
                                }
                            },
                            {
                                "BlockType": "image",
                                "Width": 30,
                                "Height": 132,
                                "Colorize": {
                                    "IsEnabled": true,
                                    "Color": "FFFFFF"
                                },
                                "Source": "cell.right.png"
                            }
                        ]
                    }
                ]
            }
        ]
    }
